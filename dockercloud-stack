accounts:
  autoredeploy: true
  environment:
    - PHINGS_ACCOUNTS_DB_HOST=db
    - RUN_TESTS=true
    - CIRCLE_TOKEN=
  image: 'cheekytinker/phings-accounts:latest'
  links:
    - db
    - messaging
  ports:
    - '10010:10010'
    - '4000:4000'
db:
  command: '--storageEngine wiredTiger'
  image: 'mongo:latest'
  ports:
    - '27017:27017'
  volumes:
    - /data/mongo
messaging:
  image: 'rabbitmq:3-management'
  ports:
    - '5672:5672'
    - '15672:15672'

